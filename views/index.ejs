<% layout('layout/boilerplate') %>

    <div class="row">
        <div class="col-md-10 offset-md-1 text-center py-5 mt-5">
            <h1 class="display-3 fw-bold mb-4">Elevate Your Shopping Experience</h1>
            <p class="lead text-secondary mb-5">Discover our curated collection of premium products, designed to bring
                style and quality into your daily life.</p>
            <div class="d-flex justify-content-center gap-3">
                <a href="/products" class="btn btn-primary btn-lg rounded-pill px-5 py-3">Shop Now</a>
                <a href="/about" class="btn btn-outline-dark btn-lg rounded-pill px-5 py-3">Learn More</a>
            </div>
        </div>
    </div>

    <div class="row mt-5 g-4 py-5">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 p-4">
                <div class="card-body">
                    <div class="icon-box bg-primary-subtle text-primary rounded-3 d-inline-flex p-3 mb-4">
                        <i class="fa-solid fa-truck-fast fa-2x"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Fast Delivery</h5>
                    <p class="text-secondary mb-0">Experience lightning-fast shipping across the country, ensuring your
                        goods arrive safely and on time.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 p-4">
                <div class="card-body">
                    <div class="icon-box bg-success-subtle text-success rounded-3 d-inline-flex p-3 mb-4">
                        <i class="fa-solid fa-shield-halved fa-2x"></i>
                    </div>
                    <h5 class="fw-bold mb-3">Secure Payment</h5>
                    <p class="text-secondary mb-0">Shop with confidence using our 100% secure payment systems,
                        protecting your data every step of the way.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 p-4">
                <div class="card-body">
                    <div class="icon-box bg-warning-subtle text-warning rounded-3 d-inline-flex p-3 mb-4">
                        <i class="fa-solid fa-headset fa-2x"></i>
                    </div>
                    <h5 class="fw-bold mb-3">24/7 Support</h5>
                    <p class="text-secondary mb-0">Our dedicated support team is available around the clock to assist
                        you with any questions or issues.</p>
                </div>
            </div>
        </div>
    </div>