<% layout('layout/boilerplate') %>

  <div class="container">
    <a href="/products" class="btn btn-outline-secondary btn-sm mb-4">
      <i class="fa-solid fa-arrow-left"></i> Back to Products
    </a>

    <div class="row">
      <!-- Product Image Section -->
      <div class="col-lg-5 mb-4">
        <div class="card border-0 shadow-sm">
          <img src="<%= product.image %>" alt="<%= product.title %>" class="card-img-top p-4"
            style="height: 400px; object-fit: contain;">
        </div>
      </div>

      <!-- Product Details Section -->
      <div class="col-lg-7">
        <div class="card border-0 h-100">
          <div class="card-body">
            <!-- Title -->
            <h1 class="card-title fw-bold mb-3">
              <%= product.title %>
            </h1>

            <!-- Category -->
            <div class="mb-3">
              <span class="badge bg-info text-dark">
                <%= product.category %>
              </span>
            </div>

            <!-- Rating (if available) -->
            <% if (product.rating && product.rating.rate) { %>
              <div class="mb-3">
                <div class="d-flex align-items-center gap-2">
                  <div class="text-warning">
                    <% for (let i=0; i < Math.round(product.rating.rate); i++) { %>
                      <i class="fa-solid fa-star"></i>
                      <% } %>
                  </div>
                  <span class="text-muted">
                    <%= product.rating.rate %> / 5 (<%= product.rating.count %> reviews)
                  </span>
                </div>
              </div>
              <% } %>

                <!-- Description -->
                <p class="card-text text-muted mb-4">
                  <%= product.description %>
                </p>

                <!-- Price -->
                <div class="mb-4">
                  <h3 class="text-primary fw-bold">$<%= product.price %>
                  </h3>
                </div>

                <!-- Stock Status -->
                <% if (product.stock && product.stock> 0) { %>
                  <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                    <i class="fa-solid fa-check-circle"></i> In Stock (<%= product.stock %> available)
                  </div>
                  <% } else { %>
                    <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
                      <i class="fa-solid fa-exclamation-circle"></i> Out of Stock
                    </div>
                    <% } %>

                      <!-- Add to Cart Section -->
                      <form action="/cart/add/<%= product.id %>" method="POST">
                        <div class="d-flex gap-3 mb-4">
                          <div>
                            <label for="quantity" class="form-label">Quantity:</label>
                            <input type="number" id="quantity" name="quantity" class="form-control" value="1" min="1"
                              style="width: 100px;">
                          </div>
                          <div class="d-flex align-items-end">
                            <button type="submit" class="btn btn-primary btn-lg">
                              <i class="fa-solid fa-cart-plus"></i> Add to Cart
                            </button>
                          </div>
                        </div>
                      </form>

                      <!-- Product Details -->
                      <div class="border-top pt-4">
                        <h5 class="fw-bold mb-3">Product Details</h5>
                        <div class="row">
                          <div class="col-md-6 mb-3">
                            <p class="text-muted small mb-1">Category</p>
                            <p class="fw-bold">
                              <%= product.category %>
                            </p>
                          </div>
                          <div class="col-md-6 mb-3">
                            <p class="text-muted small mb-1">Price</p>
                            <p class="fw-bold">$<%= product.price %>
                            </p>
                          </div>
                          <% if (product.id) { %>
                            <div class="col-md-6 mb-3">
                              <p class="text-muted small mb-1">Product ID</p>
                              <p class="fw-bold">
                                <%= product.id %>
                              </p>
                            </div>
                            <% } %>
                        </div>
                      </div>

                      <!-- Related Products Link -->
                      <div class="border-top pt-4 mt-4">
                        <a href="/products" class="btn btn-outline-primary">
                          <i class="fa-solid fa-list"></i> View All Products
                        </a>
                      </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Share Section -->
    <div class="row mt-5">
      <div class="col-12">
        <div class="card border-0 shadow-sm p-4 bg-light">
          <h5 class="fw-bold mb-3">Share this product</h5>
          <div class="d-flex gap-2">
            <button class="btn btn-outline-primary btn-sm rounded-circle">
              <i class="fa-brands fa-facebook"></i>
            </button>
            <button class="btn btn-outline-info btn-sm rounded-circle">
              <i class="fa-brands fa-twitter"></i>
            </button>
            <button class="btn btn-outline-danger btn-sm rounded-circle">
              <i class="fa-brands fa-pinterest"></i>
            </button>
            <button class="btn btn-outline-secondary btn-sm rounded-circle">
              <i class="fa-solid fa-link"></i>
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>